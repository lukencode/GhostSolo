{{!< ../default}}



<header class="bg-alternative site-heading ">
    <div class="container">
        <h1 class="display-5 post-title">Welcome back!</h1>

        <p class="lead mb-0 mt-2">Sign into your account again for full access</p>


        {{#if @member}}

        {{!-- Logged in: Redirect home --}}
        <script>window.location = '{{@site.url}}';</script>

        {{else}}

    <div class="mt-4" style="max-width: 600px;">
        <form data-members-form="signin" class="member-form">
            <div class="d-flex justify-content-between align-items-stretch">

                <input aria-label="Email Address" class="form-control form-control-lg d-flex flex-grow-1 me-2"
                    data-members-email type="email" placeholder="Type your email..." required="true"
                    autocomplete="false" />

                <button class="btn btn-lg btn-secondary" type="submit">
                    <span class="text text-nowrap">
                        Sign in
                    </span>
                    <span class="loading-text">Loading..</span>
                </button>
            </div>
            <div data-members-error class="small fw-bold pt-2">
                <!-- error message will appear here -->
            </div>
            <div data-members-success class="small fw-bold pt-2 message-success">
                âœ” Welcome back
            </div>
        </form>

        <p><small>Don't have an account yet? <a href="/signup/">Sign up</a></small></p>
    </div>


        {{/if}}




    </div>
</header>