{
    "name": "ghostsolo",
    "description": "A theme for solo ghost blogers",
    "demo": "https://lukelowrey.com",
    "version": "0.4.0",
    "engines": {
        "ghost": ">=3.0.0",
        "ghost-api": "v3"
    },
    "license": "MIT",
    "screenshots": {
        "desktop": "assets/screenshot-desktop.jpg"
    },
    "config": {
        "posts_per_page": 30,
        "image_sizes": {
            "xxs": {
                "width": 30
            },
            "xs": {
                "width": 100
            },
            "s": {
                "width": 300
            },
            "m": {
                "width": 600
            },
            "l": {
                "width": 1200
            },
            "xl": {
                "width": 2000
            }
        }
    },
    "scripts": {
        "dev": "gulp",
        "zip": "gulp zip",
        "test": "gscan .",
        "test:ci": "gscan --fatal --verbose .",
        "pretest": "gulp build",
        "preship": "yarn test",
        "ship": "STATUS=$(git status --porcelain); echo $STATUS; if [ -z \"$STATUS\" ]; then yarn version && git push --follow-tags; fi"
    },
    "author": {
        "name": "Luke Lowrey",
        "email": "lukenlowrey@gmail.com",
        "url": "https://lukelowrey.com"
    },
    "gpm": {
        "type": "theme",
        "categories": [
            "Minimal",
            "Blog"
        ]
    },
    "keywords": [
        "ghost",
        "theme",
        "ghost-theme",
        "blogger",
        "solo",
        "blog"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/lukencode/ghostsolo.git"
    },
    "bugs": "https://github.com/lukencode/ghostsolo/issues",
    "contributors": ["https://github.com/lukencode/ghostsolo/graphs/contributors"],
    "devDependencies": {
        "autoprefixer": "9.8.0",
        "cssnano": "4.1.10",
        "gscan": "3.5.4",
        "gulp": "4.0.2",
        "gulp-livereload": "4.0.2",
        "gulp-postcss": "8.0.0",
        "gulp-purgecss": "^2.3.0",
        "gulp-sass": "^4.1.0",
        "gulp-sourcemaps": "2.6.5",
        "gulp-uglify": "3.0.2",
        "gulp-util": "3.0.8",
        "gulp-watch": "5.0.1",
        "gulp-zip": "5.0.1",
        "node-sass": "^4.14.1",
        "postcss-color-function": "4.1.0",
        "postcss-custom-properties": "9.1.1",
        "postcss-easy-import": "3.0.0"
    },
    "browserslist": [
        "defaults"
    ],
    "dependencies": {
        "bootstrap": "^5.0.0-alpha1"
    }
}